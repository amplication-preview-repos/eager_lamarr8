datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  codeFiles   CodeFile[]
  createdAt   DateTime   @default(now())
  description String?
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  owner       String?
  title       String?
  updatedAt   DateTime   @updatedAt
}

model CodeFile {
  content   String?
  createdAt DateTime   @default(now())
  errorLogs ErrorLog[]
  fileName  String?
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  project   Project?   @relation(fields: [projectId], references: [id])
  projectId String?    @db.ObjectId
  syntax    Syntax?    @relation(fields: [syntaxId], references: [id])
  syntaxId  String?    @db.ObjectId
  updatedAt DateTime   @updatedAt
}

model Syntax {
  codeFiles CodeFile[]
  createdAt DateTime   @default(now())
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  pattern   Json?
  updatedAt DateTime   @updatedAt
}

model ErrorLog {
  codeFile   CodeFile? @relation(fields: [codeFileId], references: [id])
  codeFileId String?   @db.ObjectId
  createdAt  DateTime  @default(now())
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  line       Int?
  message    String?
  updatedAt  DateTime  @updatedAt
}

model User {
  createdAt   DateTime @default(now())
  displayName String?
  email       String?  @unique
  firstName   String?
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  lastName    String?
  password    String
  role        String?
  roles       Json
  updatedAt   DateTime @updatedAt
  username    String   @unique
}
